{{#product_page}}
    <article id="product" itemscope itemtype="http://schema.org/Product">
        {{#product}}
        <div class="product_info" class="row">
            <div class="slider_container">
                <div class="slider_background">
                    <figure class="image_container">
                        {{#slideshow-500}}{{/slideshow-500}}
                    </figure>
                </div>
            </div>

            <section class="details_container">
                <div class="inner_container">
                    <h1 itemprop="name">{{title}}</h1>

                    <div class="price" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                        <span itemprop="price">{{{price_with_currency}}}</span>

                        {{! This is meta data for search engines etc. }}
                        <meta itemprop="priceCurrency" content="{{currency_code}}">
                        {{#in_stock}}
                        <link itemprop="availability" href="http://schema.org/InStock">
                        {{/in_stock}}
                        {{#out_of_stock}}
                        <link itemprop="availability" href="http://schema.org/OutOfStock">
                        {{/out_of_stock}}
                    </div>

                    <div class="description html_content" itemprop="description">
                        {{{description}}}
                    </div>

                    {{! The #add_to_cart block is only rendered if the product is in stock }}
                    {{#add_to_cart}}
                        <div class="variations_container">
                            {{#variations_select}}{{/variations_select}}
                        </div>
                        <div class="add_to_cart">
                            {{#add_to_cart_button}}
                                {{#lang}}Add to cart{{/lang}}
                            {{/add_to_cart_button}}
                        </div>
                    {{/add_to_cart}}

                    {{! This block will be rendered instead of the #add_to_cart block when the product is out of stock }}
                    {{#out_of_stock}}
                    <div class="out_of_stock">
                        {{#lang}}This product is out of stock{{/lang}}
                    </div>
                    {{/out_of_stock}}

                    <div class="terms">
                        {{#return_policy}}
                            {{#lang}}Return Policy{{/lang}}
                        {{/return_policy}}
                        &nbsp; &nbsp;
                        {{#terms}}
                            {{#lang}}Terms &amp; Conditions{{/lang}}
                        {{/terms}}
                    </div>

                    {{{social_buttons}}}
                </div>
            </section>
        </div>
        {{/product}}

        {{! Render a list of related products if there are any }}
        {{#related_products?}}
        <aside id="related_products">
            <hr>

            <h2 class="might-like">{{#lang}}You might also like...{{/lang}}</h2>

            <ul class="product_list">
                {{#related_products}}
                <li>
                    <a href="{{url}}" {{#out_of_stock}}class="out_of_stock"{{/out_of_stock}}>
                        <div class="image_container">
                            {{#primary_image}}
                                <img src="{{url-300}}" alt="{{title}}">
                            {{/primary_image}}
                        </div>
                        <div class="info">
                            <h2>{{title}}</h2>
                            {{#in_stock}}
                            <h4 class="price">{{{price_with_currency}}}</h4>
                            {{/in_stock}}
                            {{#out_of_stock}}
                            <h4 class="price out_of_stock_price">{{#lang}}Out of stock{{/lang}}</h4>
                            {{/out_of_stock}}
                        </div>
                    </a>
                </li>
                {{/related_products}}
            </ul>
        </aside>
        {{/related_products?}}
    </article>

{{/product_page}}
